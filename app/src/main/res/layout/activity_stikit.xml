<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StikitActivity">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="794dp"
            android:layout_height="1932dp"
            android:layout_gravity="center"
            android:src="@drawable/grey" />

        <LinearLayout
            android:id="@+id/castTextAndShadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin" >

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="300dp"
                android:id="@+id/castText"
                android:background="#EEEE22"
                android:text="@string/initial_note"
                android:padding="40dp"
                android:gravity="top"
                android:enabled="false"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="5dp"
                android:background="@drawable/drop_shadow" />

        </LinearLayout>
    </FrameLayout>

