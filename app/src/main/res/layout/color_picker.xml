<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <GridLayout
        android:layout_width="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageWhite"
            android:layout_row="0"
            android:src="@drawable/color_picker_dot_white"
            android:layout_column="0"
            android:layout_margin="5dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageRed"
            android:layout_row="0"
            android:src="@drawable/color_picker_dot_red"
            android:layout_column="1"
            android:layout_margin="5dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageOrange"
            android:layout_row="0"
            android:src="@drawable/color_picker_dot_orange"
            android:layout_column="2"
            android:layout_margin="5dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageYellow"
            android:layout_row="0"
            android:src="@drawable/color_picker_dot_yellow"
            android:layout_column="3"
            android:layout_margin="5dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageGrey"
            android:layout_row="1"
            android:src="@drawable/color_picker_dot_grey"
            android:layout_column="0"
            android:layout_margin="5dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageBlue"
            android:layout_row="1"
            android:src="@drawable/color_picker_dot_blue"
            android:layout_column="1"
            android:layout_margin="5dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageAqua"
            android:layout_row="1"
            android:src="@drawable/color_picker_dot_aqua"
            android:layout_column="2"
            android:layout_margin="5dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageGreen"
            android:layout_row="1"
            android:src="@drawable/color_picker_dot_green"
            android:layout_column="3"
            android:layout_margin="5dp" />

    </GridLayout>
</RelativeLayout>